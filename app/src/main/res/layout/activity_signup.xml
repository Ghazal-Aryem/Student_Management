<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:height="60dp"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:text="Create Your"
            android:textColor="#E4DADA"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/bricolage_grotesque_medium"
        android:text="Account"
        android:textColor="#E4DADA"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="656dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundcorner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:paddingStart="5dp"
            android:text="Full Name"
            android:textColor="#B83838"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/stdid"
            android:layout_width="375dp"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/icons8_tick"
            android:ems="10"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:hint="Your Full Name"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:textColor="#070000"
            android:textColorLink="#070000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:paddingStart="5dp"
            android:text="Gmail"
            android:textColor="#B83838"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="375dp"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/icons8_tick"
            android:ems="10"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:hint="Your Gmail"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:textColor="#070000"
            android:textColorLink="#070000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:paddingStart="5dp"
            android:text="Password"
            android:textColor="#B83838"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="375dp"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/padlock_with_number_code_svgrepo_com"
            android:ems="10"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:hint="Enter a Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:paddingStart="5dp"
            android:text="Confirm Password"
            android:textColor="#B83838"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/rno"
            android:layout_width="375dp"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/padlock_with_number_code_svgrepo_com"
            android:ems="10"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:hint="ReType Your Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/inbtn"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:backgroundTint="#782424"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textColorLink="#F8F6F6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:text="Already have account?"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textColorLink="#000000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/bricolage_grotesque_medium"
            android:onClick="signIn"
            android:text="Sign In"
            android:textColor="#673AB7"
            android:textColorHighlight="#070000"
            android:textColorLink="#000000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
