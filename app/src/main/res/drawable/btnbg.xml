<!-- res/drawable/rounded_button_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Background color -->
    <solid android:background="@drawable/bgimage" /> <!-- Set background color as desired -->

    <!-- Border color and width -->
    <stroke android:width="2dp" android:color="#FFC62D2D" /> <!-- Set border color and width -->

    <!-- Corner radius for rounded effect -->
    <corners android:radius="16dp" /> <!-- Adjust radius as needed -->
</shape>
